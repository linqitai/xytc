.marketingBox{
  display: flex;
  flex-direction: row;
  padding: 0 24rpx;
  height: 280rpx;
}
.marketingLeft{
  flex: 1;
  background-color: white;
  border-radius: 12rpx;
  margin-right: 6rpx;
}
.marketingRight{
  flex: 1;
  display: flex;
  flex-direction: column;
  margin-left: 6rpx;
}
.marketingRight .top{
  flex: 1;
  background-color: white;
  margin-bottom: 6rpx;
  border-radius: 10rpx;
}
.marketingRight .bottom{
  flex: 1;
  background-color: white;
  margin-top: 6rpx;
  border-radius: 10rpx;
}