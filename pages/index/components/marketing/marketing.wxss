.marketingBox{
  display: flex;
  flex-direction: row;
  padding: 0 24rpx;
  height: 280rpx;
}
.marketingLeft{
  flex: 1;
  background-color: white;
  border-radius: 12rpx;
  margin-right: 6rpx;
  padding: 16rpx 30rpx 10rpx 30rpx;
  display: flex;
  flex-direction: column;
}
.marketingLeft .title{
  flex: 0 0 30rpx;
  font-size: 30rpx;
  font-weight: bold;
  
}
.marketingLeft .desc{
  flex: 0 0 24rpx;
  font-size: 24rpx;
}
.marketingLeft .imgbox{
  flex: auto;
  /* background: url(../../../../good.png) no-repeat; */
  padding-top: 10rpx;
  width: 100%;
  height: 100%;
}
.marketingLeft .imgbox .img{
  width: 100%;
  height: 100%;
  display: block;
  background-color: gray;
}
.marketingRight{
  flex: 1;
  display: flex;
  flex-direction: column;
  margin-left: 6rpx;
}
.marketingRight .top{
  flex: 1;
  background-color: white;
  margin-bottom: 6rpx;
  border-radius: 10rpx;
}
.marketingRight .bottom{
  flex: 1;
  background-color: white;
  margin-top: 6rpx;
  border-radius: 10rpx;
}