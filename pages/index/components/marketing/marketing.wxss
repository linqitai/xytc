.marketingBox{
  display: flex;
  flex-direction: row;
  height: 280rpx;
  background-color: #f1f1f1;
  margin: 16rpx 24rpx;
  box-shadow: 0rpx 0rpx 60rpx 6rpx #f1f1f1;
}
.marketingLeft{
  flex: 1;
  background-color: white;
  border-radius: 12rpx;
  margin-right: 6rpx;
  padding: 16rpx 30rpx 10rpx 30rpx;
  display: flex;
  flex-direction: column;
}
.marketingLeft .title{
  flex: 0 0 30rpx;
  font-size: 30rpx;
  font-weight: bold;
  
}
.marketingLeft .desc{
  flex: 0 0 24rpx;
  font-size: 24rpx;
  color: #646464;
}
.marketingLeft .imgbox{
  flex: auto;
  /* background: url(../../../../good.png) no-repeat; */
  padding-top: 10rpx;
  width: 100%;
  height: 100%;
}
.marketingLeft .imgbox .img{
  width: 100%;
  height: 100%;
  display: block;
  background-color: gray;
}
.marketingRight{
  flex: 1;
  display: flex;
  flex-direction: column;
  margin-left: 6rpx;
}
.marketingRight .top{
  flex: 1;
  background-color: white;
  margin-bottom: 6rpx;
  border-radius: 10rpx;
}
.marketingRight .box{
  display: flex;
  padding: 14rpx 20rpx;
}
.marketingRight .box .boxLeft{
  flex: 1;
  display: flex;
  flex-direction: column;
}
.marketingRight .box .boxLeft .title{
  flex: 1;
  font-size: 30rpx;
  font-weight: bold;
  /* position: relative; */
}
.marketingRight .box .boxLeft .title .text{
  /* position: absolute; */
  margin-top: 16rpx;
}
.marketingRight .box .boxLeft .desc{
  flex: 1;
  font-size: 24rpx;
  color: #646464;
}
.marketingRight .box .boxRight{
  flex: 1;
  width: 100%;
  height: 100%;
}
.marketingRight .box .boxRight .img{
  width: 100%;
  height: 100%;
}
.marketingRight .bottom{
  flex: 1;
  background-color: white;
  margin-top: 6rpx;
  border-radius: 10rpx;
}